{% set lang = Schola.language('student') %}
<div id="dialogConfirmCancelClass" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">{{lang.warning}}</h4>
            </div>
            <div class="modal-body">
                <div>
                    {{lang.warning_class_remaining}}
                </div>
            </div>
            <div class="modal-footer" style="padding: 10px;">
                <div class="text-center">
                    <button type="button" onclick="scheduleView.removeScheduleLessonAfterConfirm();"
                            id="btnConfirmCancelClass"
                            class="button button--saqui button--inverted button--round-l button--text-thin button--size-s margin-0i"
                            data-text="Confirm">
                        {{lang.confirm}}
                    </button>
                    <button type="button" onclick="$('#dialogConfirmCancelClass').modal('hide');"
                            id="btnDiscardCancelClass"
                            class="button button--saqui button--inverted button--round-l button--text-thin button--size-s margin-0i"
                            data-text="cancel">
                        {{lang.cancel}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>