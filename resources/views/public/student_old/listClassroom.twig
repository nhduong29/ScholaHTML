{% set lang = Schola.language('student') %}

{% if listScheduled is not empty %}
	{%for scheduled in listScheduled%}
		<div class="schedules">
			<div class="schedule-item schedule-item-{{ scheduled.schedule_id }}">
				<div class="row">
					<div class="col-sm-3 col-xs-12">
                        <div class="wrap-avatar">
                            <div class="avatar teacherAvatar" data-teacher_id="{{scheduled.teacher_id}}" >
                                <img src="{{scheduled.avatar}}"/>
                            </div>
                            <div class="teacher-name">{{ scheduled.teacher_firstname }}</div>
                        </div>
					</div>
					<div class="col-sm-9 col-xs-12">
						<div class="wrap-status clearfix">
                            <div>
                                {%if scheduled.schedule_status == 0%}
                                    <span class="label-schedule mb10 scheduled">{{ lang.scheduled }}</span>
                                {%elseif scheduled.schedule_status == 3%}
                                    <span class="label-schedule mb10 finished">{{ lang.finished }}</span>
                                {%else%}
                                    <span class="label-schedule mb10 canceled">{{ lang.canceled }}</span>
                                {%endif%}
                            </div>
							<div class="date-time clearfix mb10">
								<span class="time">{{ scheduled.schedule_time }}</span>
								<span class="date">{{ scheduled.schedule_date|date('l') }}, {{ scheduled.schedule_date }}</span>
							</div>
							<div class="link-review hidden">
								<a href="#"><span class="fa fa-youtube-play"></span> {{ lang.review_video }}</a>
								<a href="#"><span class="fa fa-book"></span> {{ lang.review_practice }}</a>
							</div>
						</div>
                        <div class="clearfix">
                            <div class="mb10" l>{{ scheduled.lession_name }}</div>
                            <p class="description hidden-xs">
                                {{ scheduled.lession_des }}
                            </p>
                            <div class="mb10 mt10">
                                {%if scheduled.schedule_status == 0 or scheduled.schedule_status == 3%}
                                    <button class="button button--saqui button--inverted button--round-l button--text-thin button--size-s button--border border-orange mb10-xs btnDetailClass" data-schedule-id="{{ scheduled.schedule_id }}" data-text="{{ lang.class_detail }}">{{ lang.class_detail }}</button>
                                {%endif%}
                                {% if scheduled.timeover == '0'%}
                                    {%if scheduled.schedule_status == 0%}
                                        <button class="button button--saqui button--inverted button--round-l button--text-thin button--size-s button--no-border mb10-xs btnCancelClass" data-schedule-id="{{ scheduled.schedule_id }}" data-text="{{ lang.cancel_class }}">{{ lang.cancel_class }}</button>
                                    {%endif%}
                                    {%if scheduled.schedule_status == 1 or scheduled.schedule_status == 2%}
                                        <button data-lesson-id="{{scheduled.lession_id}}" 
											data-schedule-id="{{scheduled.schedule_id}}"
											data-timekey="{{scheduled.schedule_time_key}}"
											data-basetime="{{scheduled.schedule_base_time}}"
											class="button button--saqui button--inverted button--round-l button--text-thin button--size-s button--border border-orange mb10-xs btnBookClass" 
											data-schedule-id="{{ scheduled.schedule_id }}" 
											data-text="{{ lang.schedule_class }}">{{ lang.schedule_class }}
										</button>
                                    {%endif%}
                                {% endif %}
                                {%if (scheduled.timeover == '1' and scheduled.schedule_status == 0) or (scheduled.schedule_status == 3)%}
                                    <a href="{{ route_url('Schola::schola-class-detail') }}?id={{ scheduled.lession_id }}#reviewClass" class="button button--saqui button--inverted button--round-l button--text-thin button--size-s button--no-border mb10-xs" data-schedule-id="{{ scheduled.schedule_id }}" data-text="{{ lang.review_class }}">{{ lang.review_class }}</a>
                                {% endif %}
                            </div>
                        </div>
					</div>
				</div>
			</div>
		</div>
	{%endfor%}

	<div id="dialogConfirmCancel" class="modal fade" role="dialog" data-backdrop="static">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">{{ lang.confirm }}</h4>
				</div>
				<div class="modal-body">
					<input type="hidden" id="scheduleIdCancel">
					<div id="confirmCancelClassNormal">
						{{ lang.are_you_sure_cancel_class }}
					</div>
					<div id="confirmCancelClassAround24h">
						{{ lang.warning_class_remaining }}
					</div>
				</div>
				<div class="modal-footer">
					<div class="text-center">
						<button type="button" id="btnConfirmCancel"
								class="button button--saqui button--inverted button--round-l button--text-thick button--size-s"
								data-text="Confirm">{{ lang.confirm }}</button>
						<button type="button" data-dismiss="modal"
								class="button button--saqui button--grey button--round-l button--text-thick button--size-s"
								data-text="Cancel">{{ lang.cancel }}</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% else %}
	<div class="no-class-panel mt20i">
		<!--<span class="icon fa fa-desktop"></span>-->
		<div class="icon-img not-found"></div>
		<h3 class="text">
			{{ lang.nothing_here_try_different }}
		</h3>
	</div>
{% endif %}
