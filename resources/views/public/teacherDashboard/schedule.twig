{% set lang = Schola.language('teacher') %}

{% extends "@Schola/public/layout/master.twig" %}

{% block title %}{{ lang.schedule }}{% endblock %}

{% block head %}
	<script src="{{ Schola.helper( 'assetUrl' , '/public/js/teacher/teacher_schedule.js' ) }}" type="text/javascript"></script>
    <script type="text/javascript">
        var URL = {
            scheduleAction: '{{ route_url('Schola::schola-teacher-schedule-action') }}',
			classroom: '{{route_url('Schola::classroom')}}',
			classDetail: '{{route_url('Schola::schola-class-detail')}}',
			mailService:'{{route_url('Schola::mail-service')}}'
        };		
        $(document).ready(function(){
           schedule.init(URL);

        });
    </script>
{% endblock %}

{% block content %}

{% set isTeacher = scheduleGrid['isTeacher'] %}
    <div>
        {% include "@Schola/public/partial/navigation.twig" %}
    </div>
    <div class="container-fluid">
        <div class="content-width">
            <div class="panel-content">
                <div class="row teacher-dashboard">
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {% include "@Schola/public/teacherDashboard/leftPanel.twig" %}
                    </div>
                    <div class="col-md-10 col-sm-12 col-xs-12">
						<div class="schedule-board">
							<div class="schedule-table panel-schedule">
								<div class="choice-week">
                                    <ul class="pagination margin-0">
                                        <li><a href="#" id="preWeek"><span class="fa fa-chevron-left"></span> {{ lang.previous_week }}</a></li>
                                        <li><a href="#" id="thisWeek"><span class="fa fa-calendar-check-o"></span> {{ lang.current_week }}</a></li>
                                        <li><a href="#" id="nextWeek">{{ lang.next_week }} <span class="fa fa-chevron-right"></span> </a></li>
                                    </ul>
								</div>								
								<div id="scheduleGridContent">
									{% include "@Schola/public/teacherDashboard/scheduleGrid.twig" %}
								</div>
							</div>
						</div>						
                    </div>
                </div>                
            </div>
        </div>
		<div>
			<div id="dialogAlert" class="modal fade" role="dialog" data-backdrop="static">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal">&times;</button>
							<h4 class="modal-title">{{ lang.alert }}</h4>
						</div>
						<div class="modal-body">
							<input type="hidden" id="scheduleIdCancel">
							{{ lang.the_student_has_booked_this_class }}
						</div>
						<div class="modal-footer">
							<div class="text-center">
								<button type="button" data-dismiss="modal"
										onclick="$('#dialogAlert').modal('hide');"
										class="button button--saqui button--grey button--round-l button--text-thick button--size-s"
										data-text="{{ lang.ok }}">{{ lang.ok }}</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
    </div>
    <div>
    	{%include "@Schola/public/dialog/teacherClassConfirmation.twig"%}
    </div>
{% endblock %}