{% set lang = Schola.language('teacher') %}

{% extends "@Schola/public/layout/master.twig" %}

{% block title %}{{ lang.parent_feedback }}{% endblock %}
{% block head %}
	<script src="{{ Schola.helper( 'assetUrl' , '/public/js/teacher/listFeedback.js' ) }}" type="text/javascript"></script>
    <script type="text/javascript">
        var URL = {
            feedbackAction: '{{ route_url('Schola::schola-parents-feedback-action') }}'
        };		
        $(document).ready(function(){
           feedback.init(URL);
        });
    </script>
{% endblock %}
{% block content %}
    <div>
        {% include "@Schola/public/partial/navigation.twig" %}
    </div>
    <div class="container-fluid">
        <div class="content-width">
            <div class="panel-content">
                <div class="row teacher-dashboard">
                    <div class="col-md-2 col-sm-3 col-xs-12">
                        {% set navActive = 2 %}
                        {% include "@Schola/public/teacherDashboard/leftPanel.twig" %}
                    </div>
					<div class="col-sm-9 col-xs-12">
						<div class="feedback-board">
							<div class="average-point">
								{%set rate1 = avgRate%2 %}
								{%set rate2 = (avgRate - rate1)/2%}
								Last 90-Day Average <span class="point">{{(avgRate/2)|round(1, 'floor')}}</span>                                
								<span class="star">
									{%if rate2 != 0%}
										{%for i in 1..rate2%}
											<span class="fa fa-star"></span>
										{%endfor%}
									{%endif%}
									{%if rate1 == 1%}
										<span class="fa fa-star-half-o"></span>
									{%endif%}
								</span>
							</div>
							<div class="comments">
								<h3>{{ lang.comments }}</h3>
								<div class="filter-comment">
									<div class="radio radio-orange radio-inline">
										<input type="radio" name="filterComment" id="filterComment1" value="0" checked="checked">
										<label for="filterComment1">{{ lang.all_comment }}</label>
									</div>
									<div class="radio radio-orange radio-inline">
										<input type="radio" name="filterComment" id="filterComment2" value="1">
										<label for="filterComment2">{{ lang.excellence }}</label>
									</div>
									<div class="radio radio-orange radio-inline">
										<input type="radio" name="filterComment" id="filterComment3" value="2">
										<label for="filterComment3">{{ lang.average }}</label>
									</div>
									<div class="radio radio-orange radio-inline">
										<input type="radio" name="filterComment" id="filterComment4" value="3">
										<label for="filterComment4">{{ lang.dissatisfactory }}</label>
									</div>
								</div>
								<div id="feedbackList">
									{% include "@Schola/public/teacherDashboard/feedbackView.twig" %}
								</div>
							</div>
						</div>
					</div>						
                </div>
            </div>
        </div>
    </div>
{% endblock %}