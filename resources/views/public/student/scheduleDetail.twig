{% set lang = Schola.language('student') %}

<div class="schedule-tooltip-detail">
    <div>
        Teacher:{{ detail.teacher_firstname }}
    </div>
    <div>
		{%if detail.mapping_key is not empty %}
			Lesson SN:L{{detail.lesson_level}}U{{detail.lesson_unit}}LS{{detail.lesson_lesson}}
		{%else%}
			Lesson SN:{{ detail.lession_sn }}
		{%endif%}
    </div>
    <div>
		{%if detail.mapping_key is not empty %}
			Lesson name:{{ detail.lesson_title }}
		{%else%}
			Lesson name:{{ detail.lession_name }}
		{%endif%}
    </div>
	<div class="text-danger">
		{%if detail.schedule_status == 2%}
			{{ lang.this_class_canceled }}
		{%endif%}
	</div>
	<div class="mt15 mb5">
		{%if false%}
			<!-- Do not remove this block, i will remove it later -->
			<button type="button" 
					onclick="{%if displayBtn%}scheduleView.gotoClassRoom(this);{%else%}return false;{%endif%}" 
					data-schedule-id="{{detail.schedule_id}}" class="btn btn-primary {%if not displayBtn%}disabled{%endif%}">{{ lang.go_to_classroom }}</button>
		{%endif%}
		<button type="button" 
					onclick="scheduleView.classDetail(this);" 
					data-schedule-id="{{detail.schedule_id}}" class="btn btn-primary">{{ lang.class_detail }}</button>
	</div>
	<div>
		<button type="button" 
				title="{%if not displayBtn%}Cannot cancel this class{%endif%}"
				onclick="{%if displayBtn%}scheduleView.removeScheduleLesson(this);{%else%}return false;{%endif%}"
				data-schedule-id="{{detail.schedule_id}}" 
				data-timestamp="{{timestamp}}"
				class="btn btn-default {%if not displayBtn%}disabled{%endif%}">{{ lang.cancel_class }}</button>
	</div>
</div>
