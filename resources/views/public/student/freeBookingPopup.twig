<div id="trialBookingDialog" class="modal fade custom-dialog no-header trialBookingDialog" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="height: 430px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span class="icon material-icons">close</span></button>
            </div>
            <div class="modal-body">
                <div class="text-center color-blue"><h3 class="modal-title"  style=""><span>{{ lang.welcome_dialog }}</span>&nbsp;<span style="color: #F2994A;">Schola!</span></h3></div>
                  <div class="text-center video-div" >
                        <iframe width="100%" height="100%" 
                                            src="//www.youtube.com/embed/wmqUDGkeui4">
                        </iframe>
                    
                </div>
                 <div class="text-center color-blue">
                    <h4 class="modal-congrats"><span>{{ lang.congrats_you_have }}</span>&nbsp;
                         {% if  profile.class_remaining > 0 %} 
                            <span style="color: #F2994A">{{ profile.class_remaining}} </span><span>{{ lang.native_class}}</span>
                         {% endif %}&nbsp;
                         {% if  profile.class_remaining_expert > 0 %} 
                            <span style="color: #F2994A">{{ profile.class_remaining_expert}}</span> <span>{{ lang.expert_class}}</span>
                         {% endif %}&nbsp;
                         {% if  profile.class_remaining_group > 0 %} 
                            <span style="color: #F2994A">{{ profile.class_remaining_group}}</span> <span>{{ lang.group_class}}</span>
                         {% endif %}&nbsp;
                     </h4>
                </div>
                 <div class="text-center book-btn">

                    <button  style="" id="btnBookTrialClass" type="button" class="bookingTrialClass button button--saqui button--inverted button--round-l button--text-thin button--size-s btnBookTrialClass" data-text="{{ lang.book_trial_class }}" onclick="location.href='{{ route_url('Schola::studentNativeClass') }}';">
                            {{ lang.book_trial_class }}
                        </button>
                </div>
                
            </div>
        </div>
    </div>
</div>