{% set lang = Schola.language('user') %}

{% extends "@Schola/public/layout/master.single.twig" %}

{% block title %}{{ lang.register }}{% endblock %}
{% block head %}
    <script src="{{ Schola.helper( 'assetUrl' , '/public/js/signup.js' ) }}" type="text/javascript"></script>
    <script type="text/javascript">
        var URL = {
            signup: '{{ route_url('Schola::signup-user') }}',
            loginFb: '{{ route_url('Schola::login-facebook') }}',
            fillDataStep1: '{{ route_url('Schola::teacherBasicInfoStep1') }}',
            childrenInformation: '{{ route_url('Schola::schola-children') }}',
        };
        $(function () {
            signupView.init(URL);
        });
    </script>
{% endblock %}
{% block content %}
    <div class="signup-page">
        <div class="overlay">
            <div class="signup-form align-middle">
                <div class="logo">
                    <a href="{{ route_url('Schola::home') }}"><img src="{{ Schola.helper('assetUrl', '/public/images/schola.png') }}"/></a>
                </div>
                <button id="loginFacebook" class="button button--isi button--text-thick button--text-upper button--size-s facebook" data-text="Login with facebook">
                    <span> <i class="fa fa-facebook-square"></i> {{ lang.login_with_facebook }}</span>
                </button>
                <p class="hr">Or sign up by email</p>
                <form id="frmSignup" action="{{ route_url('Schola::signup-user') }}" method="post">
                    <div class="control username-control">
                        <span class="icon fa fa-user"></span>
                        <input type="text" placeholder="{{ lang.username }}" id="username" name="username"/>
                        <div class="error"></div>
                    </div>
                    <div class="control password-control">
                        <span class="icon fa fa-key"></span>
                        <input type="password" placeholder="{{ lang.password }}" id="password" name="password"/>
                        <div class="error"></div>
                    </div>
                    <div class="control email-control">
                        <span class="icon fa fa-envelope"></span>
                        <input type="email" placeholder="{{ lang.email }}" id="email" name="email"/>
                        <div class="error"></div>
                    </div>
                    <button type="button" id="btn-signup" class="button button--isi button--text-thick button--text-upper button--size-s">
                        <i class="icon-spin fa fa-spinner fa-spin"></i> {{ lang.register }}
                    </button>
                    <div class="text-center mt10">
                        {{ lang.have_account }} <a href="{{ route_url('Schola::login') ~ '?' ~ urlTeacher }}" class="link">{{ lang.login }}</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}