{% set lang = Schola.language('teacher') %}
<div id="cancelConfirmModal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">{{lang.confirmation}}</h4>
            </div>
            <div class="modal-body">
                <div>
                    {{lang.confirm_cancel_class}}
                </div>
            </div>  
            <div class="modal-footer" style="padding: 10px;">
                <div class="text-center">
                    <button type="button" onclick="schedule.cancleClassConfirmation();"
                            id="cancel-class-confirm" class="btn btn-primary-2">
                        {{lang.confirm}}
                    </button>
                    <button type="button" id="btnDiscardCancelClass" class="btn btn-primary-2 btn-no-bg" data-dismiss="modal">
                        {{lang.cancel}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>