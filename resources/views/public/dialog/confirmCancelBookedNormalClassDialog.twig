{% set lang = Schola.language('student') %}
<div id="cancelConfirmDialog" class="modal fade custom-dialog" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">{{lang.warning}}</h4>
            </div>
            <div class="modal-body">
                <div>
                    {{lang.warning_class_remaining}}
                </div>
            </div>
            <div class="modal-footer" style="padding: 10px;">
                <div class="text-center">
                    <button type="button" onclick="scheduleView.removeScheduleLessonAfterConfirm();"
                            id="btnConfirmCancelClass" class="btn btn-primary-2">
                        {{lang.confirm}}
                    </button>
                    <button type="button" id="btnDiscardCancelClass" class="btn btn-primary-2 btn-no-bg" data-dismiss="modal">
                        {{lang.cancel}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>