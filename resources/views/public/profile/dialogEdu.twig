{% set lang = Schola.language('userprofile') %}

<script src="{{ Schola.helper( 'assetUrl' , '/public/js/common.js' ) }}" type="text/javascript"></script>
<div id="dialogEducation" class="modal fade" role="dialog" data-backdrop="static">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">{{ lang.education }}</h4>
			</div>
			<div class="modal-body">
                <form id="frmEditEducation" class="text-center">
                    <input type="hidden" id="education-id" name="education-id" value="{{education.education_id}}"/>
                    <div class="form-group custom inline-block">
                        <div class="control-item">
                            <label for="education-school">{{ lang.school_name }}</label>
                            <div class="wrapper-control education-school-control">
                                <div class="control">
									<input name="education-school" id="education-school" type="text" value="{{education.education_school}}" />
									<div class="error"></div>
								</div>
                            </div>
                        </div>
                        <div class="control-item">
                            <label for="education-from">{{ lang.from }}</label>
                            <div class="wrapper-control education-from-control">
                                <div class="control">
									<input data-date-format='dd/mm/yyyy'  type="text" class="date-picker" id="education-from" name="education-from" value="{{education.education_from}}" />
									<div class="error"></div>
								</div>
                            </div>
                        </div>
                        <div class="control-item">
                            <label for="education-to">{{ lang.to }}</label>
                            <div class="wrapper-control education-to-control">
                                <div class="control">
									<input data-date-format='dd/mm/yyyy' type="text" class="date-picker" name="education-to" id="education-to" value="{{education.education_to}}" />
									<div class="error"></div>
								</div>
                            </div>
                        </div>
                        <div class="control-item">
                            <label for="education-major">{{ lang.major }}</label>
                            <div class="wrapper-control education-major-control">
								<div class="control">	
									<input type="text" id="education-major" name="education-major" value="{{education.education_major}}"/>
									<div class="error"></div>
								</div>
                            </div>
                        </div>
                        <div class="control-item">
                            <label for="education-level">{{ lang.level }}</label>
                            <div class="wrapper-control education-level-control">
								<div class="control">
									<select class="select-single" name="education-level" id="education-level">
										<option value="1" {{education.education_level == 1 ? 'selected' : ''}}>{{ lang.master }}</option>
										<option value="2" {{education.education_level == 2 ? 'selected' : ''}}>{{ lang.bachelor }}</option>
										<option value="3" {{education.education_level == 3 ? 'selected' : ''}}>{{ lang.other }}</option>
									</select>
									<div class="error"></div>
								</div>
                            </div>
                        </div>
                    </div>
                </form>
			</div>
			<div class="modal-footer">
                <div class="text-center">
                    <button type="button" id="btnUpdateEducation"
                            class="button button--saqui button--inverted button--round-l button--text-thin button--size-s ml0"
                            data-text="{{ lang.update }}">{{ lang.update }}</button>
                    <button type="button" data-dismiss="modal"
                            class="button button--saqui button--round-l button--text-thin button--size-s button--grey"
                            data-text="{{ lang.cancel }}">{{ lang.cancel }}</button>
                </div>
			</div>
		</div>
	</div>
</div>