{% set lang = Schola.language('home') %}
{% set locale = Schola.locale %}

{% block title %}{{ lang.schedule }}{% endblock %}

{% block head %}

{% endblock %}

{% block content %}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ lang.effective_personalised }} {{ lang.international_english_learning }}</title>
    <!-- ================= Favicon ================== -->
    <!-- Standard -->
    <link rel="shortcut icon" href="/wp-content/plugins/schola/resources/assets/public/images/favicon.png">
    <!-- Retina iPad Touch Icon-->
    <link rel="apple-touch-icon" sizes="144x144" href="/wp-content/plugins/schola/resources/assets/public/images/favicon.png">
    <!-- Retina iPhone Touch Icon-->
    <link rel="apple-touch-icon" sizes="114x114" href="/wp-content/plugins/schola/resources/assets/public/images/favicon.png">
    <!-- Standard iPad Touch Icon-->
    <link rel="apple-touch-icon" sizes="72x72" href="/wp-content/plugins/schola/resources/assets/public/images/favicon.png">
    <!-- Standard iPhone Touch Icon-->
    <link rel="apple-touch-icon" sizes="57x57" href="/wp-content/plugins/schola/resources/assets/public/images/favicon.png">
    <meta name="description" content="{{ lang.home_description }}">
    <meta property="og:title" content="American International School At Home" />
    <meta property="og:description" content="Ages 5-12 years experience American syllabus, activities, and English speaking confidence with trained and qualified teachers! Learn & have fun!">
    <meta property="og:image" content="https://schola.tv/wp-content/plugins/schola/resources/assets/public/images/landing-page/laptop.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ host }}" />
    <meta property="fb:app_id" content="234311713641907" />
    <!-- BOOTSTRAP -->
    <script src="{{ Schola.helper( 'assetUrl' , '/public/js/jquery.min.js' ) }}" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="{{ Schola.helper( 'assetUrl' , '/public/plugins/bootstrap-3.3.7/css/bootstrap.min.css' ) }}" media="screen"/>
    <link rel="stylesheet" type="text/css" href="{{ Schola.helper( 'assetUrl' , '/public/plugins/bootstrap-3.3.7/css/bootstrap-theme.min.css' ) }}" media="screen"/>
    <script type="text/javascript" src="{{ Schola.helper( 'assetUrl' , '/public/plugins/bootstrap-3.3.7/js/bootstrap.min.js' ) }}"></script>

    <link rel="stylesheet" href="{{ Schola.helper('assetUrl', '/public/css/landing-page.css?v=1') }}">
</head>
<body>
    {% include "@Schola/public/layout/web_service_header.twig" %}
    <div class="container">
       <h2 class="page-title-blog">{{ lang.blog_page_title }}</h2>
       {% if posts %}
       {% autoescape false %}
       {% for post in posts %}

        <div class="blogs-list">
            <div class="media">
                <a class="pull-left">
                    <!-- <img class="media-object img-rounded" src="http://placekitten.com/150/150"> -->
                    {% if post.featured_image  %}
                    <img class=" media-object img-rounded img-responsive" src="{{ post.featured_image }}" alt="schola_blog" width="400" style="height: 236px;">
                    {% else %}
                    <img class=" media-object img-rounded img-responsive" src="{{ Schola.helper('assetUrl', '/public/images/noPhoto.png') }}" alt="schola_blog" width="400" style="height: 236px;">

                    {% endif %}
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><a href="{{site_url}}/blog/{{post.post_name}}" class="post-title-link">{{ post.title }}</a></h4>
                    <p class="text-left">Posted by :<span> {{ post.post_author }} </span>on <span>{{post.post_date|date("D Y-m-d") }}</span></p>
                    <p class="post_short_desc">{{ post.post_content }}</p>

                    <button type="button" class="btn btn-primary set-btn"><a href="{{site_url}}/blog/{{post.post_name}}">{{ lang.read_more }}</a></button>

                </div>
            </div>
            <hr class="breakline">
        </div>
        {% endfor %}
        {% endautoescape %}
        {% endif %}
    </div>
    <div class="main-pagination">
        <ul class="pagination">

            {% if pagination.prev %}
            <li class="page-item">
                <a class="page-link" href="#">Previous</a>
            </li>
            {% endif %}

            {% for page in pagination.pages %}
            <li class="page-item">
                {% if page.link %}
                <a href="{{ site.link }}{{page.link}}" class="{{page.class}} page-link">{{page.title}}</a>
                {% else %}
                <span class="{{page.class}}">{{page.title}}</span>
                {% endif %}
            </li>
            {% endfor %}

            {% if pagination.next %}
            <li class="page-item">
                <a href="{{ site.link }}{{ pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
            </li>
            {% endif %}
        </ul>
    </div>
    <style type="text/css">
        ul.footer-menu {
            list-style-type: none;
            text-align: center;
        }
        ul.footer-menu li {
            display:inline-block;
            margin-left: 5px;
            font-weight: 500;
            font-size: 14px;
            display: inline-block;
            padding: 0 15px;
        }
        .footer-img, .social-networks{
            text-align: center;
        }
        .blogs-list{
            margin: 60px 0 0 0;
        }
        hr.breakline{
            margin: 60px 0 0px 0px;
            border: 0;
            height: 1px;
            background: #333;
            background-image: linear-gradient(to right, #ccc, #333, #ccc);
        }
        .media-body p.text-left{
            color:#b3b1b1;
            font-size: 12px;
            color: rgb(102,102,102);
        }
        h4.media-heading{
            font-size: 25px;
            text-transform: capitalize;
        }
        button.btn.btn-primary a{
            text-decoration: none !important;
            color: #fff !important;
        }
        button.btn.btn-primary{
            margin-top: 37px;
        }
        .main-pagination{
            text-align: center;
        }
        .set-btn{
            background: #263c8f;
            -webkit-border-radius: 5px;
            border-radius: 5px;
            font-weight: 599;
            font-size: 12px;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            text-transform: uppercase;
            padding: 8px 10px;
            -webkit-transition: opacity .25s ease-in-out;
        }
        .post_short_desc{
            height: 12.6ex;
            overflow: hidden;
        }
        .media-object.img-rounded.img-responsive{
            border-radius: 20px;
        }
        .media .pull-left{
            padding-right:25px;
        }
        .post-title-link {
            text-decoration: none !important;
            color: #263c8f;
        }
        .page-title-blog{
            margin:50px 0;
            color:#263c8f;
        }
        .footer-sticky{
         position: fixed;
         left: 0;
         bottom: 0;
         width: 100%;
         color: white;
         text-align: center;
        }
    </style>
    {% include "@Schola/public/layout/web_service_footer.twig" %}
</body>
</html>
{% endblock %}